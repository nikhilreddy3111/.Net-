@model EmployeeManagement.Modals.Department

@{
    ViewData["Title"]="Create Department";
}


<h4>Create Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDepartment">
            @if (Model.Errors.Any())
            {
                <ul>
                    @foreach (string error in Model.Errors)
                    {
                        <li class="text-danger">
                            @error
                        </li>
                    }
                </ul>
            }
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group mt-2" style="float:right">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllDepartments" class="btn btn-primary">Back to List</a>
</div>

