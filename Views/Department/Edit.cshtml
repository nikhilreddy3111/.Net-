@model EmployeeManagement.Modals.Department

@{
    ViewData["Title"]="Edit Department";
}

<h4>Edit Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div>
                <span class="text-success">@Model.SuccessMessage</span>
            </div>
        }
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div>
                <span class="text-danger" style="font-weight:bold;font-size:20px">@Model.ErrorMessage</span>
            </div>
        }
        <form asp-action="UpdateDepartment">
            @if (Model.Errors.Any())
            {
                <ul>
                    @foreach (string error in Model.Errors)
                    {
                        <li class="text-danger">
                            @error
                        </li>
                    }
                </ul>
            }
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group mt-2" style="float:right">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllDepartments" class="btn btn-primary">Back to List</a>
</div>

